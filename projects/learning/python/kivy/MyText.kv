            text: 'Quit'
        CounterLayout:

<SettingsScreen>:
    ScrollViewExample:
    BoxLayout:
        Button:
            text: 'My settings button'
        Button:
            text: 'Back to menu'
            on_press: root.manager.current = 'menu'


<CounterLayout>:
    # orientation: 'vertical'
    cols: 2
    Label:
        id: label_id
        text: root.counterString
        font_size: 100
    Button:
        text: 'Increment'
        on_press: root.increase()
        disabled: not root.CanChange
    Switch:
        # text: 'Increment'
        on_active: root.toogleSwitch(self)
        # disabled: not root.CanChange
    Button:
        text: 'Decrement'
        on_press: root.decrease()
    Button:
        text: 'Reset'
        on_press: root.reset()
    ToggleButton:
        text: 'OFF'
        on_state: root.start_stop(self)
    TextInput:
        id : text_input_id
        text : 'placeholder' #default text
        multiline : False #single line
        on_text_validate : root.on_enter(self)
    Label : 
        # text : text_input_id.text
        text :  "Your name is :: " +   root.inp

