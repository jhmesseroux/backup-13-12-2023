<AnchorLayoutExample>:
    anchor_x: 'center' # left,center,right
    anchor_y: 'top' # bottom,top,center
    BoxLayout:
        # orientation:
        size_hint: 1,.1
        # add a background color red 
        canvas.before:
            Color:
                rgba: 1,0,0,1
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            text: 'Button 1'
            # size_hint: 0.5, 0.5 # its proportional to the layout box 
            # size_hint: .3,.1 
            # size : 100 , 40 # its take effects when the size_hint is None
            # pos_hint: {'center_x': 0.5, 'center_y': 0.5}        

        Label:
            id: label_id
            text: 'Anchor Layout'


<BoxLayoutExample>:
    orientation: 'vertical'
    Button:
        text: 'Button 1'
        # size_hint: 0.5, 0.5 # its proportional to the layout box 
        size_hint: None,None # its proportional to the layout box
        size : 100 , 40 # its take effects when the size_hint is None
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    BoxLayout:
        orientation: 'horizontal'
        spacing: 20
        Button:
            text: 'Button 2'
            size_hint: 0.5, 0.5
            pos_hint: {'x': 0.5, 'center_y': 0.5} # x : 0.5 move it 50% to the left ml : 50% in css
        # ADD THREE MORE BOTTON WITH ONLY A TEXT
        Button:
            text: 'Button 3'
        Button:
            text: 'Button 3.1'
        Button:
            text: 'Button 3.2'
        Button:
            text: 'Button 3.3'
        Button:
            text: 'Button 3.4'
            

    Button:
        text: 'Button 3'
        size_hint: 0.5, 0.5
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}


