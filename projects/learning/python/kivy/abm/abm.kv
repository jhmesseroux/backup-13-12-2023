                size : 400, 70                
                # green color for this text
                color: (6/255, 115/255, 0, 1)
                size_hint_y: None
                height: self.texture_size[1] if self.text else 0

            Button:
                text: "Agregar"
                spacing: 20
                padding: 20
                bold : True
                font_size : 25
                # size : 400, 50
                size_hint: 1, None 
                height: 50
                # size_hint: None, None
                background_color:(7/255, 12/255, 32/255, 0.95)
                on_release: root.add_user(dni.text, nombre.text, apellido.text)
