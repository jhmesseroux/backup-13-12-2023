                # spacing: 100            
                orientation: "vertical"            
                Label:
                    text: "Apellido"
                    color: (7/255, 12/255, 32/255, 0.95)
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'                                     
                    size_hint: None, None                    
                    size : 400, 30                     
                TextInput:
                    id: apellido
                    size_hint: 1, None 
                    height: 50
                    multiline: False
            Label :
                text: root.error
                text_size: self.size
                halign: 'left'
                valign: 'middle'                                     
                size_hint: 1, None                    
                # size : 400, 70  
                height: 70               
                # generate a red color
                color: (250/255, 73/255, 73/255, 1)
                # if the error is empty, hide the label
                size_hint_y: None
                height: self.texture_size[1] if self.text else 0
            
            Label :
